<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clvgy.system.mapper.SysEnterpriseMapper">

    <resultMap id="SysEnterpriseMap" type="com.clvgy.model.system.SysEnterprise" autoMapping="true">
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
      id,user_id,e_name,e_industry,e_address,e_introduce,e_dutyName,e_dutyPhone,e_phoneNum,e_email,status,create_time,update_time,is_deleted
   </sql>

    <select id="selectPage" resultMap="SysEnterpriseMap">
        select <include refid="columns" />
        from sys_enterprise
        <where>
            <if test="vo.keyword != null and vo.keyword != ''">
                and (e_name like CONCAT('%',#{vo.keyword},'%') or e_industry like CONCAT('%',#{vo.keyword},'%')or e_address like CONCAT('%',#{vo.keyword},'%')or e_dutyName like CONCAT('%',#{vo.keyword},'%')or e_dutyPhone like CONCAT('%',#{vo.keyword},'%'))
            </if>
            <if test="vo.createTimeBegin != null and vo.createTimeBegin != ''">
                and create_time >= #{vo.createTimeBegin}
            </if>
            <if test="vo.createTimeEnd != null and vo.createTimeEnd != ''">
                and create_time &lt;= #{vo.createTimeEnd}
            </if>
            and is_deleted = 0
        </where>
        order by id desc
    </select>


</mapper>
