<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clvgy.system.mapper.SysPositionMapper">

    <resultMap id="SysPositionMap" type="com.clvgy.model.system.SysPosition" autoMapping="true">
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
      id,pos_type_id,position_name,is_hot,create_time,update_time,is_deleted
   </sql>

    <select id="selectPage" resultMap="SysPositionMap">
        select <include refid="columns" />
        from sys_position
        <where>
            <if test="vo.keyword != null and vo.keyword != ''">
                and position_name like CONCAT('%',#{vo.keyword},'%')
            </if>
            <if test="vo.createTimeBegin != null and vo.createTimeBegin != ''">
                and create_time >= #{vo.createTimeBegin}
            </if>
            <if test="vo.createTimeEnd != null and vo.createTimeEnd != ''">
                and create_time &lt;= #{vo.createTimeEnd}
            </if>
            and is_deleted = 0
        </where>
        order by id desc
    </select>
</mapper>
